{
  "name": "Pong",
  "version": "1.0.0",
  "description": "Old school game on html/css/js",
  "main": "pong.html",
  "devDependencies": {
    "@babel/core": "^7.21.0",
    "@babel/preset-env": "^7.26.0",
    "@testing-library/jest-dom": "^6.6.3",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "scripts": {
    "test": "jest"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/__tests__/**/*.[jt]s?(x)",
      "**/?(*.)+(spec|test).[tj]s?(x)"
    ],
    "testPathIgnorePatterns": [
      "\node_modules\"
    ],
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest"
    }
  }
}
